using System;
using System.Collections.Generic;
using System.Data.Common;
using System.Diagnostics.Metrics;
using System.Transactions;


namespace Finals
{
    class Program
    {
        static string location, username, password, enter;
        static int amount, payment, newbal, Total, paymentMthd, beepcard, balance, change, Muntinlupa,
        Alabang, Bicutan, Paranaque, Laspinas, Bacoor, Pasay, MOA, Pasig, Cubao, Makati, BGC;

        static void Main(String[] args)
        {
            Muntinlupa = 15;
            Alabang = 25;
            Bicutan = 40;
            Paranaque = 50;
            Laspinas = 60;
            Bacoor = 70;
            Pasay = 85;
            MOA = 90;
            Pasig = 100;
            Cubao = 105;
            Makati = 110;
            BGC = 115;


            // MainMenu
            ShowMainMenu();

            //UserLocation
            location = GetUserLocation();


            //Location method for Muntinlupa
            if (location == "Muntinlupa")
            {
                GetMuntinlupa();

            }
            //Location method for Alabang
            if (location == "Alabang")
            {
                GetAlabang();

            }
            //Location method for Bicutan
            if (location == "Bicutan")
            {
                GetBicutan();

            }
            //Location method for Paranaque
            if (location == "Paranaque")
            {
                GetParanaque();

            }
            //Location method for Laspinas
            if (location == "Laspinas")
            {
                GetLaspinas();

            }
            //Location method for Bacoor
            if (location == "Bacoor")
            {
                GetBacoor();

            }
            //Location method for Pasay
            if (location == "Pasay")
            {
                GetPasay();

            }
            //Location method for MOA
            if (location == "MOA")
            {
                GetMOA();

            }
            //Location method for Pasig
            if (location == "Pasig")
            {
                GetPasig();

            }
            //Location method for Cubao
            if (location == "Cubao")
            {
                GetCubao();

            }
            //Location method for Makati
            if (location == "Makati")
            {
                GetMakati();

            }
            //Location method for BGC
            if (location == "BGC")
            {
                GetBGC();

            }
            else
            {
                Console.WriteLine("\nInvalid input, Please input the right keyword. ");

            }


        }
        static void ShowMainMenu()
        {
            Console.WriteLine("********************************************************************");
            Console.WriteLine("*                                                                  *");
            Console.WriteLine("***************  Welcome to PUPNR Train Station ********************");
            Console.WriteLine("*                                                                  *");
            Console.WriteLine("********************************************************************\n");
            Console.WriteLine(" \nWhere is your Destination, please select your desired location.\n ");
            Console.WriteLine("Muntinlupa - 15php \tAlabang - 25php \tBicutan - 40php\nParanaque - 50php \tLaspinas - 60php " +
            "\tBacoor - 70php \nPasay - 85php \t\tMOA - 90php  \t\tPasig - 100php  \nCubao - 105php \t\tMakati - 110php \tBGC - 115php\n  ");
        }
        static string GetUserLocation()
        {
            string location = Console.ReadLine();
            return location;
        }
        static void ShowPaymentMthd()
        {
           Console.WriteLine("\n---Select your Payment Method---");
           Console.WriteLine("\n Press 1 if Cash Onhand ");
           Console.WriteLine(" Press 2 if Beep Card\n ");
        }
        static int GetpaymentMthd() 
        {
            int paymentMthd = Convert.ToInt32(Console.ReadLine());
            return paymentMthd;
        }
        static void GetLoggingAccount()

        {
            Console.WriteLine("* Enter your Username: *");
            string username = Console.ReadLine();
            Console.WriteLine("* Enter your Password: *");
            string password = Console.ReadLine();
            Console.WriteLine(" \nWelcome you have Successfully Login! ");
        }
        static void GetMuntinlupa()
        {
            //Payment Methods
            ShowPaymentMthd();
            int paymentMthds = GetpaymentMthd();

            if (paymentMthds == 1)
            {
                //The Fare of the location
                Console.WriteLine(" \nThe fare of Muntinlupa is " + Muntinlupa);
                Console.WriteLine("Please enter your payment:\n ");
                payment = Convert.ToInt32(Console.ReadLine());

                change = payment - Muntinlupa;
                Console.WriteLine(" \nThe change is " + change + " pesos, Welcome aboard  to PUPNR Train Station. ");
                Console.WriteLine(" \n********** Thank you! ******** ");

                //Option to view destination history
                Console.WriteLine("\nDo you want to view your destination & transcation history? Press Y for yes or any key to exit. ");
                char choice = Console.ReadKey().KeyChar;

                if (choice == 'Y' || choice == 'y')
                {
                    Console.WriteLine("\n**************************************");
                    Console.WriteLine(" Destination & Transcation History ");
                    Console.WriteLine("\nDestination: " + location);
                    Console.WriteLine("Amount Paid: " + payment);
                    Console.WriteLine("Location Fare: " + Muntinlupa);
                    Console.WriteLine("Change: " + change);
                    Console.WriteLine("**************************************\n");
                }

            }
            else if (paymentMthds == 2)
            {

                Console.WriteLine(" \nPress 1 to login to your existing account ");
                Console.WriteLine("Press 2 to exit\n ");
                beepcard = Convert.ToInt32(Console.ReadLine());

                if (beepcard == 1)
                {
                    //Logging account
                    GetLoggingAccount();


                    while (true)
                    {
                        //Checking Balance account
                        Console.WriteLine(" \nPress 1 to check your current Balance ");
                        Console.WriteLine("Press 2 to recharge your Balance\n ");

                        balance = Convert.ToInt32(Console.ReadLine());
                        amount = 50;


                        if (balance == 1)
                        {

                            Console.WriteLine("\n*** Your account balance is " + amount + " *");
                        }
                        else if (balance == 2)
                        {
                            //Recharge the balance account
                            Console.WriteLine("\nHow much do you want to recharge? ");
                            newbal = Convert.ToInt32(Console.ReadLine());

                            Total = amount + newbal;
                            Console.WriteLine("\n*** The total amount is " + Total + " *");

                            Console.WriteLine(" \nThe fare of Muntinlupa is " + Muntinlupa);
                            Console.WriteLine("Type Enter to proceed paying...\n ");
                            enter = Console.ReadLine();

                            if (enter == "Enter")
                            {
                                change = Total - Muntinlupa;
                                Console.WriteLine(" \nYour account balance is " + change + " pesos, Welcome aboard  to PUPNR Train Station. ");
                                Console.WriteLine(" \n********** Thank you! ******** ");


                                //Option to view destination history
                                Console.WriteLine("\nDo you want to view your destination & transcation history? Press Y for yes or any key to exit. ");
                                char choice = Console.ReadKey().KeyChar;

                                if (choice == 'Y' || choice == 'y')
                                {
                                    Console.WriteLine("\n**************************************");
                                    Console.WriteLine(" Destination & Transcation History ");
                                    Console.WriteLine("\nDestination: " + location);
                                    Console.WriteLine("Amount Paid: " + Total);
                                    Console.WriteLine("Location Fare: " + Muntinlupa);
                                    Console.WriteLine("Account Balance: " + change);
                                    Console.WriteLine("**************************************\n");
                                    Console.WriteLine("Thank you for riding with PUPNR Train Station.");


                                }
                                break;
                            }

                            else
                            {
                                Console.WriteLine("\nInvalid input, Please input the right keyword. ");

                            }

                        }

                    }
                }
                if (beepcard == 2)
                    Console.WriteLine("*** Thank you for your Explore! ***");
                return;

            }
        }
